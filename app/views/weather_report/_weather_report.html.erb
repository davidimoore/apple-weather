<%= turbo_frame_tag "weather_report", class: "row justify-content-center" do %>
  <% if @weather_report.dig(:cached) %>
    <div class="col-8">
      <div class="row justify-content-center text-center">
        <div class="col-12">
          <div class="info-message">
            These results are cached!
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%=
    render partial: "current_temperature",
           locals: { data: @weather_report.dig(:current_temperature) }
  %>

  <%= render partial: "forecast", locals: { data: @weather_report.dig(:forecast) } %>

<% end %>
